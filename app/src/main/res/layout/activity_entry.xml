<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mstb="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="dkt01.speedscout18.dkt01.speedscout18.EntryActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Team Number:"/>
            <EditText
                android:id="@+id/entry_team_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLength="4"
                android:hint="####"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Team Color:"/>
            <ToggleButton
                android:id="@+id/entry_team_color"
                android:onClick="colorClick"
                android:background="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textOff="Red"
                android:textOn="Blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Match Number:"/>
            <EditText
                android:id="@+id/entry_match_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLength="3"
                android:hint="###"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:text="Autonomous:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Crossed Auto Line:"/>
            <Spinner
                android:id="@+id/entry_auto_baseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/auto_line_array"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Switch:"/>
            <Spinner
                android:id="@+id/entry_auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/auto_switch_array"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Scale:"/>
            <Spinner
                android:id="@+id/entry_auto_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/auto_scale_array"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:text="Teleop:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/entry_tele_red_switch_inc"
                android:onClick="teleRedSwitchIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="Red Switch"/>
            <Button
                android:id="@+id/entry_tele_red_switch_dec"
                android:onClick="teleRedSwitchDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
            <Button
                android:id="@+id/entry_tele_blue_switch_inc"
                android:onClick="teleBlueSwitchIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="Blue Switch"/>
            <Button
                android:id="@+id/entry_tele_blue_switch_dec"
                android:onClick="teleBlueSwitchDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/entry_tele_scale_inc"
                android:onClick="teleScaleIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="Scale"/>
            <Button
                android:id="@+id/entry_tele_scale_dec"
                android:onClick="teleScaleDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
            <Button
                android:id="@+id/entry_tele_exchange_inc"
                android:onClick="teleExchangeIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="Exchange"/>
            <Button
                android:id="@+id/entry_tele_exchange_dec"
                android:onClick="teleExchangeDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Ability to Pickup Cubes:"/>
            <Spinner
                android:id="@+id/entry_tele_cube_ability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/tele_cube_ability_array"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Park:"/>
            <Spinner
                android:id="@+id/entry_tele_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/tele_park_array"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Climb:"/>
            <Spinner
                android:id="@+id/entry_tele_climb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/tele_climb_array"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:text="Comments:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/entry_comments"
                android:maxLength="500"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@null"
                android:gravity="center_vertical|start"
                android:minHeight="?listPreferredItemHeight"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="?listPreferredItemPaddingLeft"
                android:paddingRight="?listPreferredItemPaddingRight" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
